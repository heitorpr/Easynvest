<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="1dp" android:left="-3dp" android:right="-2dp" android:top="-3dp">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/color_edt_text_selected" />
                    <solid android:color="#00FFFFFF" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="1dp" android:left="-3dp" android:right="-2dp" android:top="-3dp">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/color_edt_text_selected" />
                    <solid android:color="#00FFFFFF" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:bottom="1dp" android:left="-3dp" android:right="-2dp" android:top="-3dp">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/color_edt_text" />
                    <solid android:color="#00FFFFFF" />
                </shape>
            </item>

        </layer-list>
    </item>

</selector>