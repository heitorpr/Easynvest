<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="font_style" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">DINPro</item>
        <item name="fontStyle">regular</item>
        <item name="android:textColor">@color/color_font</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="font_style.white">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="font_style.checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_label</item>
        <item name="android:button">@drawable/checkbox_button</item>
        <item name="android:padding">9dp</item>
    </style>

    <style name="font_style.edt_text">
        <item name="fontStyle">medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <style name="font_style.label">
        <item name="android:textColor">@color/color_label</item>
        <item name="android:textSize">@dimen/font_size_caption</item>
    </style>

    <style name="font_style.title">
        <item name="fontStyle">medium</item>
    </style>

    <style name="font_style.title.big">
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="font_style.title_label">
        <item name="fontStyle">medium</item>
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:textSize">@dimen/font_size_caption_2</item>
    </style>

    <style name="button_style" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">DINPro</item>
        <item name="fontStyle">medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:textAppearance">@style/font_style.white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="textErrorLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="fontFamily">OpenSans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_nav_style" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">DINPro</item>
        <item name="fontStyle">medium</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textAppearance">@style/font_style.white</item>
        <item name="android:background">@drawable/transition_to_selected</item>
    </style>

    <style name="button_nav_style.selected">
        <item name="android:background">@drawable/button_nav_background_selected</item>
    </style>

    <style name="style_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorTextAppearance">@style/textErrorLabel</item>
        <item name="hintTextAppearance">@style/font_style.label</item>
    </style>
</resources>
